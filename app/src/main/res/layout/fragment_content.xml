<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.cn.zhbj74.ui.NoScrollViewPager
        android:id="@+id/vp_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/RadioButton_Style"
            android:checked="true"
            android:drawableTop="@drawable/selector_radio_home_bg"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_news"
            style="@style/RadioButton_Style"
            android:drawableTop="@drawable/selector_radio_news_bg"
            android:text="新闻" />

        <RadioButton
            android:id="@+id/rb_smart"
            style="@style/RadioButton_Style"
            android:drawableTop="@drawable/selector_radio_smart_bg"
            android:text="智慧服务" />

        <RadioButton
            android:id="@+id/rb_gov"
            style="@style/RadioButton_Style"
            android:drawableTop="@drawable/selector_radio_gov_bg"
            android:text="政务" />

        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/RadioButton_Style"
            android:drawableTop="@drawable/selector_radio_setting_bg"
            android:text="设置" />
    </RadioGroup>

</LinearLayout>